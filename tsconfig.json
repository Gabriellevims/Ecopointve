{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./api",
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["api/**/*.ts", "api/**/*.js"],
  "exclude": ["node_modules"]
}

